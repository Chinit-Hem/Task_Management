{
    "dart.flutterSdkPath": "D:\\RUPP\\flutter",
    "dart.sdkPath": "D:\\RUPP\\flutter\\bin\\cache\\dart-sdk",
    "android.sdkPath": "C:\\Android\\Sdk",
    "dart.env": {
        "ANDROID_SDK_ROOT": "C:\\Android\\Sdk",
        "ANDROID_HOME": "C:\\Android\\Sdk"
    },
    "flutter emulator": "Pixel_9_Pro",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/build": true
    },
    "editor.formatOnSave": true,
    "editor.rulers": [
        80
    ],
    "dart.lineLength": 80,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "cmake.sourceDirectory": "D:/TaskManagement/linux",
    // Auto-save settings for hot reload
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // Flutter specific settings
    "dart.flutterHotReloadOnSave": "always",
    "dart.hotReloadOnSave": "always",
    "dart.previewFlutterUiGuides": true,
    "dart.previewFlutterUiGuidesCustomTracking": true,
    "dart.showInspectorNotificationsForWidgetErrors": true,
    "dart.flutterGenerateDebugSymbols": true,
    // Build runner settings
    "dart.buildRunnerAdditionalArgs": [
        "--delete-conflicting-outputs"
    ],
    // Editor settings for better performance
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    // File watching settings
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/build/**": true,
        "**/.dart_tool/**": true
    }
}